#!/bin/sh

echo "-----> Preparing tDiary environments for heroku"

file="$1/Gemfile.lock"
if [ -f $file ]; then
  echo "       Deleting `basename $file`"
  rm $file
fi

files="$1/misc/paas/heroku/*"
for file in ${files}; do
  echo "       Copying misc/paas/heroku/`basename $file`"
  cp -r $file $1/
done

echo "       Overwriting Gemfile with misc/paas/heroku/Gemfile.local"
mv -f $1/Gemfile.local $1/Gemfile
