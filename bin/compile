#!/bin/sh

echo "-----> Preparing tDiary environments for heroku"

file="$1/Gemfile.lock"
if [ -f $file ]; then
  echo "       Deleting `basename $file`"
  rm $file
fi

files="$1/misc/paas/heroku/*"
for file in ${files}; do
  echo "       Copying misc/paas/heroku/`basename $file`"
  cp -r $file $1/
done

echo "       Touching Gemfile to fool bundler"
sleep 1
touch $1/Gemfile
ls -l $1/Gemfile*
